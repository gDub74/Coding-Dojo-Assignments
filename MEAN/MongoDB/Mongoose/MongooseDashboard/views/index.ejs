<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dashboard</title>
</head>
<body>
    <nav>
        <a href="/mongooses/new">add new mongoose</a>
    </nav>
    <main>
        <h3>All Mongooses</h3>
        <table>
            <thead>
                <tr>
                    <th>name</th>
                    <th>age</th>
                    <th>classification</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                <% for (const mgoose of mGooses) { %>
                    <tr>
                        <td><%= mgoose.name %></td>
                        <td><%= mgoose.age %></td>
                        <td><%= mgoose.classification %></td>
                        <td>
                            <a href="/mongooses/edit/<%= mgoose._id%>"> edit</a>
                        </td>
                        <td>
                            <form action="/mongooses/destroy/<%= mgoose._id%>" method='post'>
                                <button>delete</button>
                            </form>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </main>
</body>
</html>